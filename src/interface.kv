ScreenManager:
    HomeScreen:
    EscolherLogin:
    EscolherCadastro:
    LoginCliente:
    LoginFuncionario:
    CadastrarCliente:
    CadastrarFuncionario:

<HomeScreen>:
    name: 'home'
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

        Label:
            text: 'Bem-vindo ao nosso app!'

        Button:
            text: 'Fazer Login'
            size_hint: None, None
            size: 300, 50
            pos_hint: {'center_x': 0.5}
            on_release: app.root.current = 'escolherLogin'

        Button:
            text: 'Cadastrar-se'
            size_hint: None, None
            size: 300, 50
            pos_hint: {'center_x': 0.5}
            on_release: app.root.current = 'escolherCadastro'

        Button:
            text: 'Sair'
            size_hint: None, None
            size: 300, 50
            pos_hint: {'center_x': 0.5}
            on_release: app.sairDoApp()

<EscolherLogin>
    name: 'escolherLogin'
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

        Label:
            text: 'Escolha o método do login:'

        Button:
            text: 'Entrar como cliente'
            size_hint: None, None
            size: 300, 50
            pos_hint: {'center_x': 0.5}
            on_release: app.root.current = 'loginCliente'

        Button:
            text: 'Entrar como funcionario'
            size_hint: None, None
            size: 300, 50
            pos_hint: {'center_x': 0.5}
            on_release: app.root.current = 'loginFuncionario'

        Button:
            text: 'Voltar'
            size_hint: None, None
            size: 300, 50
            pos_hint: {'center_x': 0.5}
            on_release: app.root.current = 'home'

<EscolherCadastro>
    name: 'escolherCadastro'
