<LoginFuncionario>:
    name: 'loginFuncionario'
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

        Label:
            text: 'Bem-vindo de volta!'

        Label:
            text: 'E-mail*'
            text_size: self.size
            size_hint: None, None
            pos_hint: {'center_x': 0.5}
            height: 15

        TextInput:
            id: email
            size_hint: None, None
            size: 400, 30
            pos_hint: {'center_x': 0.5}
            hint_text: 'Digite o e-mail'

        Label:
            text: 'Senha*'
            text_size: self.size
            size_hint: None, None
            pos_hint: {'center_x': 0.5}
            height: 15

        TextInput:
            id: senha
            size_hint: None, None
            size: 400, 30
            pos_hint: {'center_x': 0.5}
            hint_text: 'Digite a senha'
            password: True

        Widget:
            size_hint_y: 0.3

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 60
            spacing: 20

            Widget:
                size_hint_x: 0.3

            Button:
                text: 'Voltar'
                size_hint: None, None
                size: 300, 50
                on_release: app.root.current = 'escolherLogin'

            Button:
                text: 'Entrar'
                size_hint: None, None
                size: 300, 50
                #on_release: app.entrar

            Widget:
                size_hint_x: 0.3

        Widget:
            size_hint_y: 0.3

